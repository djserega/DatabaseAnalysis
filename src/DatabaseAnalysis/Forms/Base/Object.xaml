<Page x:Class="DatabaseAnalysis.Forms.Base.Object"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DatabaseAnalysis.Forms.Base"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="600"
      Title="Object">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="2" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">

                <StackPanel Orientation="Vertical">

                    <StackPanel Orientation="Horizontal">
                        <Label Style="{StaticResource LabelCode}"/>
                        <TextBox x:Name="TextBox" Style="{StaticResource TextBoxCode}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <Label Style="{StaticResource LabelName}"/>
                        <TextBox x:Name="TextBoxName" Style="{StaticResource TextBoxName}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <Label Style="{StaticResource LabelUser}"/>
                        <TextBox x:Name="TextBoxUser" Style="{StaticResource TextBoxUser}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <Label Style="{StaticResource LabelPassword}"/>
                        <PasswordBox x:Name="PasswordBoxPassword" Style="{StaticResource PasswordBoxPassword}"/>
                    </StackPanel>

                </StackPanel>

                <Separator Width="10"/>

                <StackPanel Orientation="Vertical">

                    <StackPanel Orientation="Horizontal">
                        <Label Style="{StaticResource LabelServer}"/>
                        <TextBox x:Name="TextBoxServer" Style="{StaticResource TextBoxServer}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <Label Style="{StaticResource LabelBaseName}"/>
                        <TextBox x:Name="TextBoxBaseName" Style="{StaticResource TextBoxBaseName}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <Label Style="{StaticResource LabelUserDB}"/>
                        <TextBox x:Name="TextBoxUserDB" Style="{StaticResource TextBoxUserDB}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <Label Style="{StaticResource LabelPasswordDB}"/>
                        <PasswordBox x:Name="PasswordBoxPasswordDB" Style="{StaticResource PasswordBoxPasswordDB}"/>
                    </StackPanel>

                </StackPanel>

            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Style="{StaticResource LabelURI}"/>
                <TextBox x:Name="TextBoxURI" Style="{StaticResource TextBoxURI}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Style="{StaticResource LabelComment}"/>
                <TextBox x:Name="TextBoxComment" Style="{StaticResource TextBoxComment}"/>
            </StackPanel>

        </StackPanel>
        
    </Grid>
</Page>
