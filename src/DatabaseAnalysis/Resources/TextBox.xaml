<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DatabaseAnalysis.Resources">

    <Style TargetType="TextBox" x:Key="TextBoxBase">
        <Setter Property="Width" Value="175"/>
        <Setter Property="Background" Value="Gainsboro"/>
    </Style>

    <Style TargetType="TextBox" x:Key="TextBoxCode" BasedOn="{StaticResource TextBoxBase}">
    </Style>

    <Style TargetType="TextBox" x:Key="TextBoxName" BasedOn="{StaticResource TextBoxBase}">
    </Style>

    <Style TargetType="TextBox" x:Key="TextBoxComment" BasedOn="{StaticResource TextBoxBase}">
    </Style>

    <Style TargetType="TextBox" x:Key="TextBoxServer" BasedOn="{StaticResource TextBoxBase}">
    </Style>

    <Style TargetType="TextBox" x:Key="TextBoxBaseName" BasedOn="{StaticResource TextBoxBase}">
    </Style>

    <Style TargetType="TextBox" x:Key="TextBoxUserDB" BasedOn="{StaticResource TextBoxBase}">
    </Style>

    <Style TargetType="TextBox" x:Key="TextBoxURI" BasedOn="{StaticResource TextBoxBase}">
    </Style>

    <Style TargetType="TextBox" x:Key="TextBoxUser" BasedOn="{StaticResource TextBoxBase}">
    </Style>

</ResourceDictionary>