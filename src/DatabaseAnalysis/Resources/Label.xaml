<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DatabaseAnalysis.Resources">

    <Style TargetType="Label" x:Key="Base" BasedOn="{StaticResource {x:Type Label}}">
        <Setter Property="Width" Value="110"/>
        <!--<Setter Property="Background" Value="Gainsboro"/>-->
    </Style>

    <Style TargetType="Label" x:Key="LabelCode" BasedOn="{StaticResource Base}">
        <Setter Property="Content" Value="Код"/>
    </Style>

    <Style TargetType="Label" x:Key="LabelName" BasedOn="{StaticResource Base}">
        <Setter Property="Content" Value="Наименование"/>
    </Style>

    <Style TargetType="Label" x:Key="LabelComment" BasedOn="{StaticResource Base}">
        <Setter Property="Content" Value="Комментарий"/>
    </Style>

    <Style TargetType="Label" x:Key="LabelServer" BasedOn="{StaticResource Base}">
        <Setter Property="Content" Value="Сервер"/>
    </Style>

    <Style TargetType="Label" x:Key="LabelBaseName" BasedOn="{StaticResource Base}">
        <Setter Property="Content" Value="Имя базы"/>
    </Style>

    <Style TargetType="Label" x:Key="LabelUserDB" BasedOn="{StaticResource Base}">
        <Setter Property="Content" Value="Пользователь БД"/>
    </Style>

    <Style TargetType="Label" x:Key="LabelPasswordDB" BasedOn="{StaticResource Base}">
        <Setter Property="Content" Value="Пароль БД"/>
    </Style>

    <Style TargetType="Label" x:Key="LabelURI" BasedOn="{StaticResource Base}">
        <Setter Property="Content" Value="URL"/>
    </Style>

    <Style TargetType="Label" x:Key="LabelUser" BasedOn="{StaticResource Base}">
        <Setter Property="Content" Value="Пользователь"/>
    </Style>

    <Style TargetType="Label" x:Key="LabelPassword" BasedOn="{StaticResource Base}">
        <Setter Property="Content" Value="Пароль"/>
    </Style>

    <Style TargetType="Label" x:Key="LabelDateModified" BasedOn="{StaticResource Base}">
        <Setter Property="Content" Value="Дата изменения"/>
    </Style>
    
</ResourceDictionary>