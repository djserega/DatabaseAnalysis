<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DatabaseAnalysis.Resources">

    <Style TargetType="PasswordBox" x:Key="Base">
        <Setter Property="Width" Value="175"/>
        <Setter Property="Background" Value="Gainsboro"/>
    </Style>

    <Style TargetType="PasswordBox" x:Key="PasswordBoxPasswordDB" BasedOn="{StaticResource Base}">
    </Style>

    <Style TargetType="PasswordBox" x:Key="PasswordBoxPassword" BasedOn="{StaticResource Base}">
    </Style>

</ResourceDictionary>